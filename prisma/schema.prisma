generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  role      String   @default("admin")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Record {
  id            String   @id @default(cuid())
  serialNumber  Int
  receiptNumber String   @unique
  name          String
  amount        Float
  date          DateTime
  description   String?
  type          String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([receiptNumber])
  @@index([name])
}
